{
    "presets": [
        "@babel/preset-env",
        [
            "@babel/preset-react",
            {
                "runtime": "automatic"
            }
        ],
        "@babel/preset-typescript"
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "root": ["./src"],
                "alias": {
                    "@components": "./src/components",
                    "@pages": "./src/pages",
                    "@utils": "./src/utils",
                    "@app": "./src/app",
                    "@assets": "/src/assets",
                    "@index": "/src/index",
                    "@store": "/src/store/store",
                    "@src": "./src"
                }
            }
        ]
    ]
}
